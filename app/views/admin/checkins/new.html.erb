<%- model_class = Checkin -%>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header card-header-success" data-background-color="green">
              <div class="row">
                <div class="col-8">
                  <h4 class="title"><%=t '.title', :default => [:'helpers.titles.edit', 'Checkin BiomÃ©trico'], :model => model_class.model_name.human.titleize %></h4>	                    
                </div>
                <div class="col" align="right">                        
                  <%= link_to raw('<i class="material-icons">person</i>'),
                    admin_people_path, 
                    data: { toggle: 'tooltip', placement: 'top', original_title: 'Cadastro de Pessoas' },
                    :style => "margin-left: 35px",
                    :target => "_blank",
                    :class => 'btn btn-success btn-round btn-fab' %>
                  <%= link_to raw('<i class="material-icons">monetization_on</i>'),
                    '#', 
                    data: { toggle: 'tooltip', placement: 'top', original_title: 'Efetuar Pagamentos' },
                    :id => 'btnPayment',
                    :style => "margin-left: 35px",
                    :class => 'btn btn-success btn-round btn-fab' %>
                  <%= link_to raw('<i class="material-icons">format_list_numbered</i>'),
                    admin_checkins_path, 
                    data: { toggle: 'tooltip', placement: 'top', original_title: 'Listagem de checkins' },
                    :style => "margin-left: 35px",
                    :target => "_blank",
                    :class => 'btn btn-success btn-round btn-fab' %>                        
                </div>
              </div>
            </div>

            <div class="card-content">
              <div class="row">   
                <div class="col-12"> 
                  <%= render :partial => 'form' %> 
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

<script>
$("#btnPayment").on("click", function(event) {        
  event.preventDefault();
});     
</script>