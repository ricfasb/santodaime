<%- model_class = Checkin -%>

	    <div class="row">
	        <div class="col-md-12">
	            <div class="card">
	                <div class="card-header card-header-success" data-background-color="green">
                    <div class="row">
                      <div class="col-md-8">
                        <h4 class="title">Checkins</h4>
                        <p class="category">Listagem de checkins efetuados</p>
                      </div>
                      <div class="col" align="right">
                        <%= link_to raw('<i class="now-ui-icons ui-1_simple-add"></i>'),
                          new_admin_checkin_path, 
                          :style => "margin-left: 35px",
                          :class => 'btn btn-lg btn-success btn-round btn-icon' %>
                      </div>
                    </div>
	                </div>
                  
                  <div class="card-content">
                    <%= search_form_for [:admin, @q] do |f| %>
                    <div class="row">  
                      <div class="col-md-1"></div>
                      <div class="col-md-2 justify-content-center d-flex align-items-center">
                        <%= f.label :person_name_cont, :class => 'form-control' %>                                                    
                      </div>
                      <div class="col-md-7 justify-content-center d-flex align-items-center" align="right">			   
                        <%= f.search_field :person_name_cont, :placeholder => 'Valor a ser pesquisado', :class => 'form-control' %>
                      </div> 
                      <div class="col-md-2" align="center">                           
                        <%= link_to raw('<i class="now-ui-icons ui-1_zoom-bold"></i>'),
                          "", :onclick => "$('#checkin_search').submit()",
                          :style => "margin-left: 35px",
                          :class => 'btn btn-lg btn-warning btn-round btn-icon' %>
                      </div>  
                    </div> 
                    <% end %>   
                    <div class="row">
                      <div class="col">
                        <div class="card-content table-responsive">
                          <table class="table table-striped">
                            <thead>
                              <tr>
                                <th><%= model_class.human_attribute_name(:company_id) %></th>
                                <th><%= model_class.human_attribute_name(:person_id) %></th>                              
                                <th><%= model_class.human_attribute_name(:created_at) %></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @checkins.each do |checkin| %>
                                <tr>
                                  <td><%= checkin.company.name %></td>
                                  <td><%= checkin.person.name %></td>                                
                                  <td><%= checkin.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
                                </tr>
                              <% end %>
                            </tbody>
                            <% if @checkins.blank? %> 
                              <tfoot> 
                                <th colspan="3" class="tfoot_empty" style="text-align: center; height: 50px;">
                                  Nenhum check-in realizado
                                </th>
                              </tfoot>
                            <% elsif @checkins.count > 10 %>
                              <tfoot> 
                                <th colspan="3" style="text-align: left; height: 50px;">
                                  <%= will_paginate @checkins  %>
                                </th>
                              </tfoot>
                            <% end %>  
                          </table>
                        </div>
                      </div>
                    </div>                       
                  </div>
            </div->
          </div>
      </div>      

