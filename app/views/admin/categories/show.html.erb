<%- model_class = Category -%>

<div class="content">	
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-success" data-background-color="green">
              <h4 class="title"><%=t '.title', :default => model_class.model_name.human.titleize %></h4>
          </div>
          
          <div class="card-content">
            <div class="row justify-content-center d-flex align-items-center">    
              <div class="col-10">  
                <dl class="dl-horizontal">
                  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
                  <dd><%= @category.description %></dd>
                </dl>
                
                <div class="col-12">
                  <div class="btn-group pull-right">
                    <%= link_to t('.back', :default => t("helpers.links.back")),
                                  admin_categories_path, :class => 'btn btn-default'  %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_admin_category_path(@category), :class => 'btn btn-default' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  admin_category_path(@category),
                                  :method => 'delete',
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-danger' %>
                  </div>
                </div>                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
                
