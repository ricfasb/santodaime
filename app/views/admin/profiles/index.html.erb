<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-success" data-background-color="green">
        <div class="row">
          <div class="col">
            <h4 class="title">Perfis</h4>                
          </div>              
        </div>
      </div>  

      <div class="row justify-content-center d-flex align-items-center">
        <div class="col-11">
          <div class="card-content table-responsive">
            
            <%= render :partial => 'form' %> 

            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Descrição</th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @profiles.each do |profile| %>
                  <tr>
                    <td><%= profile.description %></td>
                    <td>
                      <% unless profile.id == 1 %>  
                        <%= link_to 'Editar', edit_admin_profile_path(profile) %>
                      <% end %>
                    </td>
                    <td>
                      <% unless profile.id == 1 %>
                        <%= link_to 'Remover', admin_profile_path(profile), method: :delete, data: { confirm: 'Tem certeza que deseja remover o perfil?' } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br/>
          </div>
        </div>
      </div>      
    </div>
  </div>
</div>

<script> 
  jQuery(function($){
    $.notify("<%= notice %>", "success" );
  });
</script>