<%- model_class = Email -%>
	  <div class="row">
	    <div class="col-md-12">
	      <div class="card">
	        <div class="card-header card-header-success" data-background-color="green">
	          
            <div class="row">  
                <div class="col-md-8"> 
                  <h4 class="title">Envio de E-mail</h4>
	                <p class="category">Agendamento de envio de e-mails</p>
                </div>
                <div class="col" align="right">                            
                  <%= link_to raw('<i class="now-ui-icons ui-1_simple-add"></i>'),
                      new_admin_email_path, 
                      :style => "margin-left: 35px",
                      :class => 'btn btn-lg btn-success btn-round btn-icon' %>
                          
                  <%= link_to raw('<i class="now-ui-icons ui-1_email-85"></i>'),
                      admin_email_send_mail_path("-1"),                       
                      :class => 'btn btn-lg btn-warning btn-round btn-icon' %>
                </div>  
            </div> 
	        </div> 

          <div class="card-content">            
            <div class="row">
              <div class="col">
                <div class="card-content table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th><%= model_class.human_attribute_name(:title) %></th>
                        <th><%= model_class.human_attribute_name(:subject) %></th>
                        <th><%= model_class.human_attribute_name(:schedule) %></th>
                        <th><%=t '.actions', :default => t("helpers.actions") %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @emails.each do |email| %>
                        <tr>
                          <td><%= email.title %></td>
                          <td><%= email.subject %></td>
                          <td><%= email.schedule %></td>
                          <td>
                            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                        edit_admin_email_path(email), :class => 'btn btn-default btn-xs' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                        admin_email_path(email),
                                        :method => :delete,
                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                    <% if @emails.blank? %> 
                      <tfoot> 
                        <th colspan="5" class="tfoot_empty" style="text-align: center; height: 50px;">
                          Nenhum registro encontrado!
                        </th>
                      </tfoot>
                    <% elsif @emails.count > 10 %>
                      <tfoot> 
                        <th colspan="5" style="text-align: left; height: 50px;">
                          <%= will_paginate @emails %>
                        </th>
                      </tfoot>
                    <% end %> 
                  </table>
                </div>
              </div>              
            </div>
          </div>
        </div>
      </div>
    </div>
