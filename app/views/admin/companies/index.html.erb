<%- model_class = Company -%>
	    <div class="row">
	        <div class="col-md-12">
	            <div class="card">
	                <div class="card-header card-header-success" data-background-color="green">
                    <div class="row">
                      <div class="col-md-8">
                        <h4 class="title">Sedes</h4>
                        <p class="category">Listagem de sedes</p>
                      </div>
                      <div class="col" align="right">
                         <%= link_to raw('<i class="now-ui-icons ui-1_simple-add"></i>'),
                              new_admin_company_path, 
                              :style => "margin-left: 35px",
                              :class => 'btn btn-success btn-lg btn-round btn-icon' %>
                      </div>
                    </div>
	                </div>                  

                  <div class="card-content">                                           
                    <%= search_form_for [:admin, @q] do |f| %>
                      <div class="row">  
                        <div class="col-md-1"></div>
                        <div class="col-md-2 justify-content-center d-flex align-items-center">
                          <%= f.label :name_cont, :class => 'form-control' %>                                                    
                        </div>
                        <div class="col-md-7 justify-content-center d-flex align-items-center" align="right">			   
                          <%= f.search_field :name_cont, :placeholder => 'Valor a ser pesquisado', :class => 'form-control' %>
                        </div> 
                        <div class="col-md-2" align="center">                        
                          <%= link_to raw('<i class="now-ui-icons ui-1_zoom-bold"></i>'),
                            "", :onclick => "$('#company_search').submit()",
                            :style => "margin-left: 35px",
                            :class => 'btn btn-lg btn-warning btn-icon btn-round' %>
                        </div>  
                      </div>  
                    <% end %>                    
                    <div class="row">
                      <div class="col">
                        <div class="card-content table-responsive">
                          <table class="table">
                            <thead>
                              <tr>
                                <th><%= sort_link(@q, :id) %></th>
                                <th><%= sort_link(@q, :name)  %></th>
                                <th><%= model_class.human_attribute_name(:telephone) %></th>
                                <th><%= model_class.human_attribute_name(:address_id) %></th>
                                <th><%=t '.actions', :default => t("helpers.actions") %></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @companies.each do |company| %>
                                <tr>
                                  <td><%= company.id %></td>
                                  <td style="word-break: break-all;"><%= link_to company.name, admin_company_path(company) %></td>
                                  <td><%= company.telephone %></td>
                                  <td style="word-break: break-all;"><%= company.complete_address %></td>
                                  <td>
                                    <div class="btn-group" role="group">
                                      <%= link_to raw('<i class="material-icons">edit</i>'),
                                                  edit_admin_company_path(company), :style => 'color: gray; heigth: 100%; width: 100%;' %>
                                      <%= link_to raw('<i class="material-icons">delete</i>'),
                                                  admin_company_path(company),
                                                  :method => :delete,
                                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                                            
                                                  :style => 'color: #cf1a1a; font-size: 32px;' %>
                                    </div>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>                                                     
                            <% if @companies.blank? %> 
                              <tfoot> 
                                <th colspan="5" class="tfoot_empty" style="text-align: center; height: 50px;">
                                  Nenhum registro encontrado!
                                </th>
                              </tfoot>
                            <% elsif @companies.count > 10 %>
                              <tfoot> 
                                <th colspan="5" style="text-align: left; height: 50px;">
                                  <%= will_paginate @companies %>
                                </th>
                              </tfoot>
                            <% end %>                          
                          </table>                        
                        </div>
                      </div>
                    </div>                       
                  </div>
                </div>
            </div->
          </div>
      </div>      

<script>
  jQuery(function($){
    $.notify("<%= notice %>", "success" );
  });
</script>