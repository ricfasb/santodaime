<%- model_class = Company -%>
<div class="content">	
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-success" data-background-color="green">
              <h4 class="title"><%=t '.title', :default => model_class.model_name.human.titleize %></h4>
          </div>
          
          <div class="card-content">
            <div class="row justify-content-center d-flex align-items-center">    
              <div class="col-10">  
                <dl class="dl-horizontal">
                  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
                  <dd><%= @company.name %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
                  <dd><%= @company.telephone %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:address_id) %>:</strong></dt>
                  <dd><%= @company.complete_address %></dd>
                </dl>
                
                <div class="col-lg-12">
                  <div class="btn-group pull-right" style="padding-bottom: 10px">
                    <%= link_to t('.back', :default => t("helpers.links.back")),
                                  admin_companies_path, :class => 'btn btn-default'  %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_admin_company_path(@company), :class => 'btn btn-default' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  admin_company_path(@company),
                                  :method => 'delete',
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-danger' %>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>              
