<div class="card">
    <div class="card-header card-header-success" data-background-color="green">
        <h4 class="title">Livro Caixa</h4>
    </div> 
    <div class="card-content table-responsive">                        
        <table class="table table-striped">
            <thead>
            <tr>                
                <th colspan="3">Receitas</th>
                <th colspan="3">Despesas</th>                                                                                
            </tr>
            <tr>                
                <th width="15%">Tipo</th>
                <th width="25%">Pessoa</th>                                                                
                <th width="10%">Valor</th>                
                <th width="15%">Tipo</th>
                <th width="25%">Pessoa</th>
                <th width="10%">Valor</th>
            </tr>
            </thead>
            <tbody> 
                <% @cashes.each do |cash| %>           
                <tr>
                    <td><%= cash.type %></td>
                    <td style="word-break: break-all;"><%= cash.person %></td>
                    <td>R$ <%= humanized_money cash.amount %></td>                                                                    
                    <td></td>
                    <td></td>
                    <td></td>
                </tr> 
                <% end %>  
                <tr>                    
                    <td colspan="3" align="center" style="font-size: large; font-weight: bold">Total R$ <%= humanized_money @totInput %></td>
                    <td colspan="3" align="center" style="font-size: large; font-weight: bold">R$ 0,00</td>
                </tr>     
                <tr>                    
                    <td colspan="6" align="center" style="color: green; font-size: large; font-weight: bold">Total R$ <%= humanized_money @totInput %></td>                    
                </tr>     
            </tbody>        
        </table>                          
    </div>
</div>    