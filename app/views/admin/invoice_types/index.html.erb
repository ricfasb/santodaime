<h1>Admin Invoice Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_invoice_types.each do |admin_invoice_type| %>
      <tr>
        <td><%= admin_invoice_type.description %></td>        
        <td><%= link_to 'Edit', edit_admin_invoice_type_path(admin_invoice_type) %></td>
