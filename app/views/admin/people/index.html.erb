<%- model_class = Person -%>
	    <div class="row">
	        <div class="col-md-12">
	            <div class="card">
	                <div class="card-header card-header-success" data-background-color="green">
                    <div class="row">
                      <div class="col-md-8">
                        <h4 class="title">Pessoas</h4>
                        <p class="category">Listagem de pessoas</p>
                      </div>
                      <div class="col" align="right">
                        <span class="dropdown">
                          <a class="btn btn-lg btn-success btn-round btn-icon dropdown-toggle" href="/admin/people/birthdays_month" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="now-ui-icons files_paper"></i>
                            <div class="ripple-container"></div>
                          </a>
                          <ul class="dropdown-menu">
                              <li>
                                  <a target="_blank" href="/admin/people/birthday">Aniversariantes do dia</a>
                                  <a target="_blank" href="/admin/people/exportar_pdf">Aniversariantes do mês</a>
                                  <a target="_blank" href="/admin/people/birthdays_month">Mensalidades Pendentes</a>
                              </li>
                          </ul>
                        </span>
                        <%= link_to raw('<i class="now-ui-icons ui-1_simple-add"></i>'),
                            new_admin_person_path,                             
                            :class => 'btn btn-lg btn-success btn-round btn-icon' %>
                        
                      </div>
                    </div>
	                </div>
                  
                  <div class="card-content">                    
                    <%= search_form_for [:admin, @q] do |f| %>
                      <div class="row">   
                        <div class="col-md-1"></div>
                        <div class="col-md-2 justify-content-center d-flex align-items-center">
                          <%= f.label :name_cont, :class => 'form-control' %>                                                    
                        </div>
                        <div class="col-md-7 justify-content-center d-flex align-items-center" align="right">			   
                          <%= f.search_field :name_cont, :placeholder => 'Valor a ser pesquisado', :class => 'form-control' %>
                        </div> 
                        <div class="col-md-2" align="center">                           
                          <%= link_to raw('<i class="now-ui-icons ui-1_zoom-bold"></i>'),
                            "", :onclick => "$('#person_search').submit()",
                            :style => "margin-left: 35px",
                            :class => 'btn btn-lg btn-warning btn-round btn-icon' %>
                        </div>   
                      </div>
                    <% end %>                                          
                    <div class="row">
                      <div class="col">
                        <div class="card-content table-responsive">
                          <table class="table table-striped">
                            <thead>
                              <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>E-mail</th>
                                <th>Fardamento</th>    
                                <th>Celular</th>                                                                                          
                                <th>Categoria</th>
                                <th style="text-align: center">Biometria</th>
                                <th><%=t '.actions', :default => t("helpers.actions") %></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @people.each do |person| %>
                                <tr>
                                  <td><%= link_to code_completion(person.id), admin_person_path(person) %></td>
                                  <td><%= person.name %></td>
                                  <td><%= person.email %></td>
                                  <td><%= person.date_enroll %></td>                                
                                  <td><%= person.smartphone_number %></td>                                
                                  <td><%= person.category.description %></td>
                                  <td align="center">
                                    <% if person.fingerprint.empty? %>
                                      <i class="material-icons">fingerprint</i>
                                    <% else %>
                                      <i class="material-icons" style="color:green">fingerprint</i>
                                    <% end %>                                       
                                  </td>
                                  <td class="btn-group">
                                    <%= link_to raw('<i class="material-icons">edit</i>'),
                                                edit_admin_person_path(person), :style => 'color: gray; heigth: 100%; width: 100%;' %>
                                    <%= link_to raw('<i class="material-icons">delete</i>'),
                                                admin_person_path(person),
                                                :method => :delete,
                                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                                            
                                                :style => 'color: #cf1a1a; font-size: 32px;' %>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>
                            <% if @people.blank? %> 
                              <tfoot> 
                                <th colspan="8" class="tfoot_empty" style="text-align: center; height: 50px;">
                                  Nenhum registro encontrado!
                                </th>
                              </tfoot>
                            <% elsif @people.count > 10 %>
                              <tfoot> 
                                <th colspan="8" style="text-align: left; height: 50px;">
                                  <%= will_paginate @people %>
                                </th>
                              </tfoot>
                            <% end %> 
                          </table>
                        </div>
                      </div>
                    </div>                       
                  </div>
            </div->
          </div>
      </div>      

<script>
  jQuery(function($){
    $.notify("<%= notice %>", "success" );
  });
</script>