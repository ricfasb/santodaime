<%= form_for [:admin, @payment_type], :html => { remote: true, :class => "form-horizontal payment_types" } do |f| %>

  <div class="row justify-content-center d-flex align-items-center">    
    <div class="col-8">      
      <%= f.label 'Descrição:', :class => 'control-label' %>
      <%= f.text_field :description, :placeholder => 'Informe o tipo de pagamento', :class => 'form-control' %>
    </div>

    <div class="col-2">
      <% unless @payment_type.description.nil? %>
        <div class="btn-group">          
          <%= f.submit nil, :class => 'btn btn-sm btn-success' %>
          <a class="btn btn-sm btn-default" href="/admin/payment_types/">Cancelar</a>
        </div>
      <% else %>
        <%= f.submit nil, :class => 'btn btn-sm btn-success' %>
      <% end %>
    </div>
    <div class="col-1"></div>
  </div>

<% end %>
