<div class="content">	
  <div class="container-fluid">
	  <div class="row justify-content-center d-flex align-items-center" style="height: 100vh">
	    <div class="col-lg-8 col-lg-offset-2">
        <div class="card">
            <div class="card-header card-header-success" data-background-color="green">
                <h4>Novo Usu√°rio</h4>
            </div>

            <div class="card-content">               
              <div class="row justify-content-center d-flex align-items-center"> 
                <div class="col-11">       
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="row"> 
                      <div class="col-lg-12">
                        <%= f.email_field :email, :placeholder => :email, :class => 'form-control', autofocus: true, autocomplete: "email" %>
                      </div>
                    </div>
                    <div class="row"> 
                      <div class="col-lg-12">                        
                        <%= f.password_field :password, :placeholder => :password, :class => 'form-control', autocomplete: "off" %>
                      </div>
                    </div>
                    <div class="row"> 
                      <div class="col-lg-12">
                        <%= f.password_field :password_confirmation, :placeholder => :password_confirmation, :class => 'form-control', autocomplete: "off" %>
                      </div>
                    </div>
                    <div class="row"> 
                      <div class="col-lg-12">                       
                        <div class="btn-group pull-right">
                          <%= f.submit nil, :class => 'btn btn-success' %>                          
                        </div>
                      </div>
                    </div> 
                  <% end %>
                </div>
              </div>
            </div>
        </div>        
      </div>
    </div>
  </div>
</div>