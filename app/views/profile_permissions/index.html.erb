<p id="notice"><%= notice %></p>

<h1>Profile Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Permission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_permissions.each do |profile_permission| %>
      <tr>
        <td><%= profile_permission.profile %></td>
        <td><%= profile_permission.permission %></td>
        <td><%= link_to 'Show', profile_permission %></td>
        <td><%= link_to 'Edit', edit_profile_permission_path(profile_permission) %></td>
        <td><%= link_to 'Destroy', profile_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile Permission', new_profile_permission_path %>
